{
  "schema": {
    "type": "object",
    "required": [
      "personal_details",
      "login_details",
      "agreements"
    ],
    "properties": {
      "personal_details": {
        "type": "object",
        "properties": {
            "first_name": {
            "type": "string"
          },
            "last_name": {
            "type": "string"
          },
          "birthdate": {
            "type": "string",
            "format": "date"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "email_confirmation": {
            "type": "string",
            "format": "email"
          }
        },
        "required": [
          "first_name",
          "last_name",
          "birthdate",
          "email",
          "email_confirmation"
        ]
      },
      "login_details": {
        "type": "object",
        "properties": {
          "star_alliance_id": {
            "type": "string",
            "pattern": "^[0-9]{10}$",
            "format": "id"
          },
          "password": {
            "type": "string",
            "format": "password"
          },
          "password_confirmation": {
            "type": "string",
            "format": "password"
          }
        },
        "required": [
          "star_alliance_id",
          "password",
          "password_confirmation"
        ]
      },
      "agreements": {
        "type": "object",
        "required": [
          "terms"
        ],
        "properties": {
          "terms": {
            "type": "boolean",
            "x-display-type": "checkbox"
          }
        }
      }
    }
  },
  "$schema": "http://json-schema.org/draft-04/schema#"
}
